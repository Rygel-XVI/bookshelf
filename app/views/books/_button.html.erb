
  <%= f.hidden_field :status, value: global_status %>

  <%= f.fields_for :user_books, userbook do |u| %>

    <%= u.hidden_field :user_id, value: user_id %>

    <%= u.hidden_field :book_id, value: f.object.id %>

    <% if !!user_status_choice %>
        <%= render partial: 'userbook_status', locals: {u: u} %>
