<!DOCTYPE html>
<html>
  <head>
    <title>Bookshelf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <% if logged_in? %>
        <%= link_to "Home", user_path(User.find(current_user)) %>
        <%= link_to "Profile", edit_user_path(User.find(current_user)) %>
        <%= link_to "Logout", logout_path %>
      <% end %>
    </nav>

    <%= yield %>

  </body>
</html>
