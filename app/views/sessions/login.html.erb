<h1>Login to your Bookshelf</h1>

<br>

<%= render partial: '/layouts/form_errors', locals: {model: @user} %>

<br>


<%= form_for @user, :url => login_path do |f| %>
  Name: <%= f.text_field :name %> <br>
  Password: <%= f.password_field :password %> <br>
  <%= f.submit "Login" %> <br><br>
<% end %>

<%= button_to "Sign in with Google Mail", '/auth/google_oauth2' %>

<br>

<%= link_to "Create New User", new_user_path %>
