<h1>Edit <%= @user.name %></h1>

<h3><%= @user.email%></h3>

<%= form_for @user do |f| %>
  Update Name: <%= f.text_field :name %><br>
  Update Email: <%= f.text_field :email %><br>
  Update Password: <%= f.text_field :password %><br>
  Confirm Password: <%= f.text_field :password_confirmation %><br>
  <%= f.submit %><br>
<% end %>
